{
	"name": "librelane-base-image",
    "image": "ghcr.io/chipusm/librelane-base-image:latest",

    "containerEnv": {
        "PDK": "ihp-sg13g2",
        "PDK_ROOT": "/workspaces/Campamento-ChipUSM-2025/IHP-Open-PDK"
    },

    "runArgs": [
    "--env=DISPLAY=${localEnv:DISPLAY}",
    "--env=QT_X11_NO_MITSHM=1",
    "--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw"
    ],

    "postCreateCommand": "git submodule update --init --recursive"
}